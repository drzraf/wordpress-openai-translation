{
  "name": "mnicole90/wordpress-openai-translation",
  "type": "wordpress-plugin",
  "description": "A Wordpress plugin that uses OpenAI to translate posts and pages",
  "license": "MIT",
  "keywords": [
    "wordpress",
    "plugin",
    "openai",
    "translation"
  ],
  "require": {
    "php": ">=8.1",
    "symfony/validator": "^6.2",
    "symfony/intl": "^6.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.1"
  },
  "authors": [
    {
      "name": "Maxime N.",
      "email": "mnicole.dev@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Translation\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "TranslationTest\\": "tests/unit/Translation/"
    }
  }
}
